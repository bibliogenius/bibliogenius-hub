# Production Environment Template for Infomaniak

# Application
APP_ENV=prod
APP_SECRET=GENERATE_A_STRONG_SECRET_HERE

# Database (SQLite - simple, no external DB needed)
DATABASE_URL="sqlite:///%kernel.project_dir%/var/data.db"

# CORS - Allow Flutter apps to connect
CORS_ALLOW_ORIGIN='^https?://(.*\.)?bibliogenius\.(org|app|fr)(:[0-9]+)?$'

# Public URL (update with your domain)
DEFAULT_URI=https://hub.bibliogenius.org

# Jira Integration for Bug Reports
JIRA_BASE_URL=
JIRA_PROJECT_KEY=
JIRA_EMAIL=your_email@example.com
JIRA_API_TOKEN=your_jira_api_token
